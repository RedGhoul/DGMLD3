@model ICollection<Graph>


<div class="jumbotron">
    <h1 class="display-4">Welcome !</h1>
    <p class="lead">Easily convert from your DGML file generated by Visual Studio to a shareable link</p>
    <hr class="my-4">
    <p>Share your Code Map / DB Schema Map with others on your team</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" asp-controller="DGML" asp-action="Upload" role="button">Get Started</a>
    </p>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"></p>
                        <a href="@item.GraphLinkURL" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

