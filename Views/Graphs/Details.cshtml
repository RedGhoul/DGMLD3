@model Graph

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Graph</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Unique Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Readable Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadableName)
        </dd>
        <dt class="col-sm-2">
            Public URL
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GraphLinkURL)
        </dd>
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            Public
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
