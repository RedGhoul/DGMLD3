@model DGMLD3.Data.Link

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Link</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="source" class="control-label"></label>
                <input asp-for="source" class="form-control" />
                <span asp-validation-for="source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="target" class="control-label"></label>
                <input asp-for="target" class="form-control" />
                <span asp-validation-for="target" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraphId" class="control-label"></label>
                <select asp-for="GraphId" class ="form-control" asp-items="ViewBag.GraphId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-currentGraphId="@ViewBag.currentGraphId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
